{
  "name": "frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "prepare": "yarn build:smui-theme",
    "build:smui-theme": "smui-theme compile static/smui.css -i src/theme",
    "build:vite": "vite build",
    "build": "yarn build:smui-theme && yarn build:vite",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "postinstall": "patch-package",
    "deploy:set-domain": "echo toolkit.nostring.stream > ./build/CNAME",
    "deploy:set-nojekyll": "touch ./build/.nojekyll",
    "deploy:publish": "gh-pages -t -d build",
    "deploy": "yarn build && yarn deploy:set-domain && yarn deploy:set-nojekyll && yarn deploy:publish"
  },
  "devDependencies": {
    "@material/typography": "^14.0.0",
    "@mdi/js": "^7.1.96",
    "@playwright/test": "^1.28.1",
    "@smui/button": "^7.0.0-beta.0",
    "@smui/icon-button": "^7.0.0-beta.0",
    "@smui/list": "^7.0.0-beta.0",
    "@smui/menu": "^7.0.0-beta.0",
    "@smui/textfield": "^7.0.0-beta.0",
    "@smui/top-app-bar": "^7.0.0-beta.0",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "gh-pages": "^5.0.0",
    "patch-package": "^6.5.1",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "smui-theme": "^7.0.0-beta.0",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vitest": "^0.25.3"
  },
  "type": "module",
  "dependencies": {
    "nostr-tools": "^1.4.1"
  }
}
